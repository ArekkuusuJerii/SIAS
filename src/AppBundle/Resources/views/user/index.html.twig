{% extends 'AppBundle:template:paginator_template.html.twig' %}
{% block nav %}
    <a href="{{ path('logout') }}">Logout</a>
{% endblock %}
{% block header %}
    Proyectos de Desarrollador
{% endblock %}
{% block sortables %}
    <th scope="col">
        <div>
            {{ knp_pagination_sortable(items, '#', 'id') }}
        </div>
    </th>
    <th scope="col">
        <div {% if items.isSorted('nombre') %} class="btn"{% endif %}>
            {{ knp_pagination_sortable(items, 'Nombre', 'nombre') }}
        </div>
    </th>
    <th scope="col">
        <div {% if items.isSorted('fechaInicio') %} class="btn"{% endif %}>
            {{ knp_pagination_sortable(items, 'Fecha Inicio', 'fechaInicio') }}
        </div>
    </th>
    <th scope="col">
        <div {% if items.isSorted('fechaFin') %} class="btn"{% endif %}>
            {{ knp_pagination_sortable(items, 'Fecha Fin', 'fechaFin') }}
        </div>
    </th>
{% endblock %}
{% block table_columns %}
    <th scope="col">Nombre</th>
    <th scope="col">Descripcion</th>
    <th scope="col">Fecha Inicio</th>
    <th scope="col">Fecha Fin</th>
    <th scope="col">Empresa</th>
    <th scope="col">Líder</th>
    <th scope="col"></th>
{% endblock %}
{% block table_rows %}
    {% for item in items %}
        <tr>
            <td>{{ item.nombre }}</td>
            <td>{{ item.descripcion }}</td>
            <td>{{ item.fechaInicio|date('d/M/Y') }}</td>
            <td>{{ item.fechaFin|date('d/M/Y') }}</td>
            <td>{{ item.empresa.nombre }}</td>
            <td>
                {% if item.lider is not null %}
                    {{ item.lider.usuario.persona.nombre }}
                    {{ item.lider.usuario.persona.apellidop }}
                    {{ item.lider.usuario.persona.apellidom }}
                {% else %}
                    Sin Líder
                {% endif %}
            </td>
            <td>
                <a href="{{ path('user_activities', {'id': item.id | urlencrypt }) }}">Ver Actividades</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="text-center">
                Sin Proyectos
            </td>
        </tr>
    {% endfor %}
{% endblock %}